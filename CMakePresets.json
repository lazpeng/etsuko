{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "desktop-debug",
      "inherits": "base",
      "displayName": "Desktop Debug",
      "binaryDir": "build/desktop-debug",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "desktop-release",
      "inherits": "base",
      "displayName": "Desktop Release",
      "binaryDir": "build/desktop-release",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "wasm-release",
      "inherits": "base",
      "displayName": "WebAssembly (Emscripten) Release",
      "binaryDir": "build/wasm-release",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "VCPKG_TARGET_TRIPLET": "wasm32-emscripten",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_SYSROOT": "$env{EMSDK}/upstream/emscripten/cache/sysroot",
        "CMAKE_SYSTEM_NAME": "Emscripten"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "desktop-debug",
      "configurePreset": "desktop-debug"
    },
    {
      "name": "desktop-release",
      "configurePreset": "desktop-release"
    },
    {
      "name": "wasm-release",
      "configurePreset": "wasm-release"
    }
  ],
  "testPresets": []
}
